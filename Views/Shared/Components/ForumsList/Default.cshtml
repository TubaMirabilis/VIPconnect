@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@model IEnumerable<ProjectX.Models.Category>

<li><a asp-controller="Discussions" asp-action="Index" class="dropdown-item">All</a></li>
@foreach (var c in Model)
{
    <li><a asp-controller="Discussions" asp-action="Index" asp-route-category="@c.Name" class="dropdown-item">@c.Name</a></li>
}
@if(User.IsInRole("Administrator"))
{
    <li><a asp-controller="Category" asp-action="Create" class="dropdown-item">New Forum</a></li>
}