@model IEnumerable<ProjectX.Models.SupportTicket>
@if (Model != null)
{
    @foreach (var item in Model)
    {
        <div class="d-flex border border-dark rounded px-4">
            <div class="position-relative flex-shrink-0 align-self-center bg-primary rounded-circle feature__circle">
                <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="#fff" class="bi bi-ticket-detailed-fill position-absolute top-50 start-50 translate-middle" viewBox="0 0 16 16">
                    <path d="M0 4.5A1.5 1.5 0 0 1 1.5 3h13A1.5 1.5 0 0 1 16 4.5V6a.5.5 0 0 1-.5.5 1.5 1.5 0 0 0 0 3 .5.5 0 0 1 .5.5v1.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 11.5V10a.5.5 0 0 1 .5-.5 1.5 1.5 0 1 0 0-3A.5.5 0 0 1 0 6V4.5Zm4 1a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 0-1h-7a.5.5 0 0 0-.5.5Zm0 5a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 0-1h-7a.5.5 0 0 0-.5.5ZM4 8a1 1 0 0 0 1 1h6a1 1 0 1 0 0-2H5a1 1 0 0 0-1 1Z"/>
                </svg>
            </div>
            <div class="ms-4">
                <a class="fs-4 lh-lg text-primary text-decoration-none" asp-controller="Support" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Subject)</a>
                <p class="fs-4 lh-1">Sent by @item.Creator at @item.DateCreated</p>
            </div>
        </div>
    }
}
@if (Model == null)
{
    <p class="fs-4 text-center mt-4">No Resolved Tickets</p>
}