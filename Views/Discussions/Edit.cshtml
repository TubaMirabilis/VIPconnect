@model ProjectX.Models.Discussion

@{
    ViewData["Title"] = "Edit";
}

<script>
    $('#editArea').focus(); 
</script>
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Creator" class="form-control" />
            <input type="hidden" asp-for="CreatorId" class="form-control" />
            <input type="hidden" asp-for="Title" class="form-control" />
            <input type="hidden" asp-for="DateCreated" class="form-control" />
            <input type="hidden" asp-for="Category" class="form-control" />
            <div class="form-group mb-3">
                <textarea id="editArea" asp-for="Content" class="form-control mt-2 mb-4" style="height: 12rem;"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-end form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
